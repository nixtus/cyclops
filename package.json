{
    "name": "cyclops",
    "version": "1.0.0",
    "private": true,
    "description": "Cyclops is a simple, straightforward and 100% FOSS Chrome extension for adding HTTP request headers",
    "repository": {
        "url": "https://github.com/nixtus/cyclops"
    },
    "scripts": {
        "dev": "npm-watch",
        "build": "tsc && vite build",
        "test": "vitest run --coverage",
        "test-watch": "vitest",
        "pretty": "prettier --write ."
    },
    "dependencies": {
        "flowbite": "2.2.0",
        "flowbite-react": "0.6.4",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "zod": "3.22.4"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "6.6.4",
        "@testing-library/react": "16.3.0",
        "@testing-library/user-event": "14.6.1",
        "@types/chrome": "0.1.1",
        "@types/jest": "30.0.0",
        "@types/node": "24.2.0",
        "@types/react": "19.1.9",
        "@types/react-dom": "19.1.7",
        "@vitejs/plugin-react": "5.0.0",
        "@vitest/coverage-v8": "3.2.4",
        "autoprefixer": "10.4.21",
        "jsdom": "26.1.0",
        "npm-watch": "0.13.0",
        "postcss": "8.5.6",
        "prettier": "3.6.2",
        "tailwindcss": "3.3.5",
        "ts-jest": "29.4.1",
        "typescript": "5.9.2",
        "vite": "7.1.1",
        "vitest": "3.2.4"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,tsx"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}

{
    "name": "cyclops",
    "version": "0.1.0",
    "private": true,
    "description": "Cyclops is a simple, straightforward and 100% FOSS Chrome extension for adding HTTP request headers",
    "repository": {
        "url": "https://github.com/nixtus/cyclops"
    },
    "scripts": {
        "watch": "npm-watch",
        "build": "INLINE_RUNTIME_CHUNK=false craco build",
        "test": "react-scripts test",
        "pretty": "prettier --write ."
    },
    "dependencies": {
        "@craco/craco": "^7.0.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.9",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "typescript": "^4.9.3"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,tsx"
        }
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "devDependencies": {
        "@types/chrome": "^0.0.202",
        "autoprefixer": "^10.4.13",
        "npm-watch": "^0.11.0",
        "postcss": "^8.4.19",
        "prettier": "^2.8.0",
        "tailwindcss": "^3.2.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}

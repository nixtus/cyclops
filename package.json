{
    "name": "cyclops",
    "version": "1.0.0",
    "private": true,
    "description": "Cyclops is a simple, straightforward and 100% FOSS Chrome extension for adding HTTP request headers",
    "repository": {
        "url": "https://github.com/nixtus/cyclops"
    },
    "scripts": {
        "dev": "npm-watch",
        "build": "tsc && vite build",
        "test": "vitest run --coverage",
        "test-watch": "vitest",
        "pretty": "prettier --write ."
    },
    "dependencies": {
        "flowbite": "2.2.0",
        "flowbite-react": "0.6.4",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "zod": "3.22.4"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "6.1.4",
        "@testing-library/react": "14.1.2",
        "@testing-library/user-event": "14.5.1",
        "@types/chrome": "0.0.252",
        "@types/jest": "29.5.9",
        "@types/node": "20.9.3",
        "@types/react": "18.2.38",
        "@types/react-dom": "18.2.16",
        "@vitejs/plugin-react": "4.2.0",
        "@vitest/coverage-v8": "0.34.6",
        "autoprefixer": "10.4.16",
        "jsdom": "22.1.0",
        "npm-watch": "0.11.0",
        "postcss": "8.4.31",
        "prettier": "3.1.0",
        "tailwindcss": "3.3.5",
        "ts-jest": "29.1.1",
        "typescript": "5.3.2",
        "vite": "5.0.5",
        "vitest": "0.34.6"
    },
    "watch": {
        "build": {
            "patterns": [
                "src"
            ],
            "extensions": "ts,tsx"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
